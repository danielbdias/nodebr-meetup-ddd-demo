{
  "name": "nodebr-meetup-ddd-demo",
  "version": "0.0.1",
  "author": "Daniel Baptista Dias",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:danielbdias/nodebr-meetup-ddd-demo.git"
  },
  "license": "UNLICENSED",
  "scripts": {
    "start": "NODE_ENV=development NODE_PATH=./ nodemon Infra/api/server.js",
    "test": "NODE_ENV=test NODE_PATH=./ mocha \"Domain/**/*.test.js\" \"Infra/**/*.test.js\" --colors --require Tests/support.js --reporter spec",
    "test:watch": "yarn test -- --watch",
    "coverage": "nyc yarn test",
    "coverage:watch": "watch -p \"+(Domain|Infra|seeders|Features)/**/*.js\" -c \"nyc yarn test\"",
    "lint": "standard -v \"Domain/**/*.js\" \"Infra/**/*.js\" \"seeders/*.js\" \"Features/**/*.js\"",
    "lint:fix": "standard --fix \"Domain/**/*.js\" \"Infra/**/*.js\" \"seeders/*.js\" \"Features/**/*.js\"",
    "lint:watch": "watch -p \"+(Domain|Infra|seeders|Features)/**/*.js\" -c \"yarn lint\"",
    "migration:create": "sequelize migration:create --name",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:migrate:undo:all": "sequelize db:migrate:undo:all",
    "seed:create": "sequelize seed:create --name",
    "db:seed": "sequelize db:seed",
    "db:seed:all": "sequelize db:seed:all",
    "db:seed:undo": "sequelize db:seed:undo",
    "db:seed:undo:all": "sequelize db:seed:undo:all",
    "build": "yarn lint && yarn coverage"
  },
  "engines": {
    "node": "8.1.2",
    "npm": "5.0.3"
  },
  "nyc": {
    "statements": 95,
    "branches": 95,
    "functions": 95,
    "lines": 95,
    "check-coverage": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "node_modules/**/*",
      "Domain/**/*.test.js",
      "Infra/**/*.test.js",
      "Features/**/*.js",
      "Fixtures/**/*.js",
      "Tests/**/*"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "it",
      "after",
      "afterEach",
      "before",
      "beforeEach"
    ]
  },
  "dependencies": {
    "axios": "^0.15.2",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "express-winston": "^2.0.0",
    "graphql": "^0.7.2",
    "graphql-server-express": "^0.5.0",
    "joi": "^9.1.1",
    "lodash.get": "^4.4.2",
    "pg": "^6.1.2",
    "sequelize": "^3.24.4",
    "sequelize-cli": "^2.4.0",
    "speck-entity": "^0.1.3",
    "speck-sequelize-repository": "^0.0.9",
    "uuid": "^3.0.0",
    "winston": "^2.2.0",
    "twitter-node-client": "^0.0.6",
    "sentiment": "^4.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "faker": "^3.1.0",
    "lodash": "^4.17.4",
    "mocha": "^3.1.1",
    "moment": "^2.17.1",
    "nodemon": "^1.11.0",
    "nyc": "^10.2.0",
    "rosie": "^1.6.0",
    "sinon": "^2.1.0",
    "standard": "^8.3.0",
    "yargs": "^8.0.1",
    "watch-cli": "^0.2.1"
  }
}
